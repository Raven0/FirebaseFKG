<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.preangerstd.firebasefkg.InputMahasiswaActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!--Image-->
            <ImageButton
                android:id="@+id/btnSetupImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_default"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop" />

            <!--Nama-->
            <EditText
                android:id="@+id/tbNamaMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:selectAllOnFocus="false"
                />

            <!--Alamat-->
            <EditText
                android:id="@+id/tbAlamatMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:padding="10dp"
                android:selectAllOnFocus="false"
                />

            <!--Tgllahir-->
            <EditText
                android:id="@+id/tbTglMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:hint="Birth Date"
                android:padding="10dp"
                android:selectAllOnFocus="false"
                android:clickable="true"
                android:editable="false" />

            <!--Gender-->

            <Spinner
                android:id="@+id/cbGenderMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:entries="@array/GenderList"
                android:background="@drawable/input_outline"
                android:padding="10dp"
                >

            </Spinner>

            <!--Religion-->
            <Spinner
                android:id="@+id/cbAgamaMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:entries="@array/ReligionList"
                android:background="@drawable/input_outline"
                android:padding="10dp">

            </Spinner>

            <!--Blood-->
            <Spinner
                android:id="@+id/cbDarahMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:entries="@array/BloodList"
                android:background="@drawable/input_outline"
                android:padding="10dp">

            </Spinner>

            <!--Year-->
            <Spinner
                android:id="@+id/cbAngkatanMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:padding="10dp">

            </Spinner>

            <!--Nationality-->
            <Spinner
                android:id="@+id/cbNegaraMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:padding="10dp">

            </Spinner>

            <!--Prodi-->
            <Spinner
                android:id="@+id/cbProdiMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_outline"
                android:padding="10dp">

            </Spinner>

            <Button
                android:id="@+id/btnSubmitMhsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
